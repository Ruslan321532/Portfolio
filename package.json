{
  "name": "portfolio-aceternity-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "bash -c 'if [[ \"$1\" == \"--amend\" && \"$2\" == \"--no-edit\" ]]; then exit 0; fi; commit_msg_file=\"$1\"; commit_msg=$(cat \"$commit_msg_file\"); if ! echo \"$commit_msg\" | grep -E -q \"^(bugfix:|release:|feat:|config:|chore:)\"; then echo \\\"Error: \\\\033[31mWrong prefix in commit message\\\\033[0m ❗❗❗ \\\"; echo \\\"Allowed prefixes: \\\\033[34mbugfix: | release: | feat: | config:\\\\033[0m\\\"; exit 1; fi'"
    }
  },
  "dependencies": {
    "@emailjs/browser": "^4.3.3",
    "@react-three/drei": "^9.105.3",
    "@react-three/fiber": "^8.16.1",
    "@tabler/icons-react": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "clsx": "^2.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "framer-motion": "^11.0.25",
    "husky": "^9.0.11",
    "next": "14.1.4",
    "pinst": "^3.0.0",
    "prettier": "^3.2.5",
    "react": "^18",
    "react-dom": "^18",
    "sonner": "^1.4.41",
    "tabler-icons-react": "^1.56.0",
    "tailwind-merge": "^2.2.2",
    "three": "^0.163.0",
    "three-globe": "^2.31.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
